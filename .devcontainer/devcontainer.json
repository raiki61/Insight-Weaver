{
  "name": "Monorepo Project",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "backend",
  "workspaceFolder": "/app",

  // This sets the environment variable for the entire container
  "containerEnv": {
    "PYTHONPATH": "/app"
  },

  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python"]
    }
  },
  "forwardPorts": [8000, 8080]
}
